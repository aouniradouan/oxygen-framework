# ============================================
# OXYGENFRAMEWORK 2.0 - ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and configure for your environment
# Author: Redwan Aouni
# ============================================

# --------------------------------------------
# APPLICATION SETTINGS
# --------------------------------------------
APP_NAME="OxygenFramework"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=UTC
APP_LOCALE=en
APP_KEY=

# --------------------------------------------
# DATABASE CONFIGURATION
# --------------------------------------------
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=oxygen
DB_USERNAME=root
DB_PASSWORD=

# --------------------------------------------
# TEMPLATE & THEME CONFIGURATION
# --------------------------------------------
DEFAULT_TEMPLATE=default
FORCE_MOBILE_TEMPLATE=false

# --------------------------------------------
# STORAGE CONFIGURATION
# --------------------------------------------
# Options: local, s3
STORAGE_DISK=local

# AWS S3 Configuration (if STORAGE_DISK=s3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

# --------------------------------------------
# MAIL CONFIGURATION
# --------------------------------------------
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@oxygenframework.com
MAIL_FROM_NAME="${APP_NAME}"

# --------------------------------------------
# SMS CONFIGURATION (Twilio)
# --------------------------------------------
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=

# --------------------------------------------
# CACHE CONFIGURATION
# --------------------------------------------
# Options: file, redis, memcached
CACHE_DRIVER=file
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# --------------------------------------------
# SESSION CONFIGURATION
# --------------------------------------------
SESSION_DRIVER=file
SESSION_LIFETIME=120

# --------------------------------------------
# QUEUE CONFIGURATION
# --------------------------------------------
# Options: sync, database, redis
QUEUE_CONNECTION=sync

# --------------------------------------------
# API KEYS & SERVICES
# --------------------------------------------
# Payment Gateways
STRIPE_KEY=
STRIPE_SECRET=
PAYPAL_CLIENT_ID=
PAYPAL_SECRET=

# Social Authentication
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# AI Services
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# --------------------------------------------
# SECURITY SETTINGS
# --------------------------------------------
# Generate with: php oxygen key:generate
APP_KEY=

# CSRF Token Lifetime (minutes)
CSRF_LIFETIME=120

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# --------------------------------------------
# LOGGING
# --------------------------------------------
LOG_CHANNEL=stack
LOG_LEVEL=debug

# --------------------------------------------
# BROADCASTING
# --------------------------------------------
BROADCAST_DRIVER=log
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

# --------------------------------------------
# WEBSOCKET SERVER
# --------------------------------------------
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=8080

# --------------------------------------------
# DEVELOPMENT TOOLS
# --------------------------------------------
# Enable query logging
DB_LOG_QUERIES=false

# Enable debug bar
DEBUG_BAR_ENABLED=false

# --------------------------------------------
# PRODUCTION SETTINGS
# --------------------------------------------
# Set these in production:
# APP_ENV=production
# APP_DEBUG=false
# CACHE_DRIVER=redis
# SESSION_DRIVER=redis
# QUEUE_CONNECTION=redis

# ============================================
# MODERN API CONFIGURATION
# ============================================

# --------------------------------------------
# JWT AUTHENTICATION
# --------------------------------------------
# Generate a secure secret with: php -r "echo bin2hex(random_bytes(32));"
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_IN_PRODUCTION
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=604800
JWT_ALGORITHM=HS256
JWT_ISSUER=http://localhost:8000
JWT_AUDIENCE=http://localhost:8000
JWT_BLACKLIST_ENABLED=true
JWT_BLACKLIST_GRACE_PERIOD=0

# --------------------------------------------
# CORS CONFIGURATION
# --------------------------------------------
# Allowed origins (comma-separated). Use * for all origins (development only!)
# Production example: CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,X-CSRF-Token
CORS_EXPOSED_HEADERS=X-RateLimit-Limit,X-RateLimit-Remaining,X-RateLimit-Reset
CORS_ALLOW_CREDENTIALS=false
CORS_MAX_AGE=86400

# --------------------------------------------
# API CONFIGURATION
# --------------------------------------------
API_VERSION=v1
API_PREFIX=/api

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=60
RATE_LIMIT_WINDOW=60
RATE_LIMIT_AUTH_MAX_REQUESTS=120
RATE_LIMIT_DRIVER=file

# Pagination
API_PAGINATION_PER_PAGE=15
API_PAGINATION_MAX_PER_PAGE=100

# Response Format
API_INCLUDE_TIMESTAMP=true
API_INCLUDE_REQUEST_ID=true
API_WRAP_DATA=true

# Error Handling
API_INCLUDE_TRACE=false
API_RETURN_ALL_ERRORS=true
